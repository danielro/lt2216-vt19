<?xml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0">
  <nomatch>
    I didn't understand. 
  </nomatch>
  
  <noinput>
    You didn't say anything.
  </noinput>


  <form id="house">
    <field name="smartaction">
      <prompt>Welcome. Open or close the: garage, shades or the skylights.</prompt>
      <grammar src="grammars/lab2_actions_objects.xml" />
    </field>
    <filled>
      <prompt>
        You said: <value expr="smartaction$.utterance" />,
        with the interpretation <value expr="smartaction$.interpretation" />
        and with a confidence of <value expr="smartaction$.confidence" />.
      </prompt>

      <break time="3s" />
      <goto next="#house" />
    </filled>
  </form>
</vxml>
