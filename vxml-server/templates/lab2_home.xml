<?xml version="1.0" encoding="UTF-8" ?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/vxml"
      xmlns:voxeo="http://community.voxeo.com/xmlns/vxml">
  <nomatch>
    I didn't understand. 
  </nomatch>
  
  <noinput>
    You didn't say anything.
  </noinput>


  <form id="house">
    <field name="smartaction">
      <prompt>You can: Open or close the: garage, shades or the skylights.</prompt>
      <grammar src="grammars/lab2_actions_objects.xml" />
    </field>
    <filled>
      <prompt>
        You said: <value expr="smartaction$.utterance" />,
        with the interpretation <value expr="smartaction$.interpretation" />
        and with a confidence of <value expr="smartaction$.confidence" />.
        <break time="2s"/>
      </prompt>

      <goto next="house" />
    </filled>
  </form>
</vxml>
